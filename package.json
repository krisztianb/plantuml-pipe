{
    "name": "plantuml-pipe",
    "version": "1.3.5",
    "description": "Generate multiple PlantUML diagrams with one JAVA process",
    "author": {
        "name": "Kriszti√°n Balla",
        "url": "https://github.com/krisztianb"
    },
    "license": "ISC",
    "keywords": [
        "uml",
        "plantuml"
    ],
    "devDependencies": {
        "@types/binary-split": "1.0.0",
        "@types/node": "14.14.27",
        "@types/split2": "3.2.0",
        "@typescript-eslint/eslint-plugin": "4.23.0",
        "@typescript-eslint/parser": "4.23.0",
        "eslint": "7.26.0",
        "eslint-plugin-jsdoc": "34.2.2",
        "eslint-plugin-ordered-imports": "0.5.0",
        "eslint-plugin-unicorn": "32.0.1",
        "husky": "4.3.8",
        "prettier": "2.3.0",
        "rimraf": "3.0.2",
        "typescript": "4.2.4"
    },
    "dependencies": {
        "binary-split": "^1.0.5",
        "split2": "^3.2.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/krisztianb/plantuml-pipe.git"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint && npm run format"
        }
    },
    "main": "dist/plantuml_pipe.js",
    "types": "dist/plantuml_pipe.d.ts",
    "files": [
        "/dist",
        "/scripts",
        "/vendor"
    ],
    "scripts": {
        "lint": "npx eslint ./src",
        "format": "npx prettier --check ./src",
        "clean": "rimraf dist",
        "build": "npx tsc",
        "clean-build": "npm run clean && npm run build",
        "test": "cd test && node ./index.js",
        "postinstall": "node scripts/testdot.js"
    }
}
