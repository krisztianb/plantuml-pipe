{
    "name": "plantuml-pipe",
    "version": "1.3.5",
    "description": "Generate multiple PlantUML diagrams with one JAVA process",
    "author": {
        "name": "Kriszti√°n Balla",
        "url": "https://github.com/krisztianb"
    },
    "license": "ISC",
    "keywords": [
        "uml",
        "plantuml"
    ],
    "devDependencies": {
        "@types/binary-split": "1.0.0",
        "@types/node": "14.14.14",
        "@types/split2": "2.1.6",
        "@typescript-eslint/eslint-plugin": "4.11.0",
        "@typescript-eslint/parser": "4.11.0",
        "eslint": "7.16.0",
        "eslint-plugin-jsdoc": "30.7.9",
        "eslint-plugin-ordered-imports": "0.4.0",
        "eslint-plugin-unicorn": "24.0.0",
        "husky": "4.3.6",
        "prettier": "2.2.1",
        "rimraf": "3.0.2",
        "typescript": "4.1.3"
    },
    "dependencies": {
        "binary-split": "^1.0.5",
        "split2": "^3.2.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/krisztianb/plantuml-pipe.git"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint && npm run format"
        }
    },
    "main": "dist/plantuml_pipe.js",
    "types": "dist/plantuml_pipe.d.ts",
    "files": [
        "/dist",
        "/scripts",
        "/vendor"
    ],
    "scripts": {
        "lint": "npx eslint ./src",
        "format": "npx prettier --check ./src",
        "clean": "rimraf dist",
        "build": "npx tsc",
        "clean-build": "npm run clean && npm run build",
        "test": "cd test && node ./index.js",
        "postinstall": "node scripts/testdot.js"
    }
}
